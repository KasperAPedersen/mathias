<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Mathias | Home</title>
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <script src="https://kit.fontawesome.com/d7cb81324e.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" type="text/css" href="inc/styling/css/index.css" />
    </head>
    <body>
        <div id="swp">
            <!-- Nav -->
            <div class="w3-display-container w3-bar w3-dark-grey">
                <a href="#" class="w3-bar-item w3-button w3-mobile w3-blue w3-hover-blue" style="width:33%">Home <i class="fa-solid fa-home"></i></a>
                <% if(admin == 1) { %><a href="/admin" class="w3-bar-item w3-button w3-mobile w3-hover-blue" style="width:33%">Admin <i class="fa-solid fa-home"></i></a><% } %>
                <a href="/logout" class="w3-bar-item w3-button w3-mobile w3-display-right w3-hover-blue" style="width:33%">Log out <i class="fa-solid fa-sign-out"></i></a>
            </div>

            <div class="w3-row w3-margin-top">
                <!-- Profile -->
                <div class="w3-quarter w3-container">
                    <div class="w3-card-4 w3-dark-grey">

                        <div class="w3-container w3-center">
                            <img src="images/<%= picture %>" alt="Avatar" style="width:80%" id="profilePicture">
                            <h5>Hi <%= name %> <i class="fa fa-smile-o"></i></h5>
                        </div>
                    </div>

                    <div class="w3-container w3-dark-grey w3-margin-top w3-center">
                        <p id="digitalClock">00:00:00</p>
                    </div>
                    <div class="w3-container w3-dark-grey w3-margin-top">
                        <!--Analog Clock-->
                        <div class="container">
                            <div class ="clock">
                                <div class="circle" id="sc" style="--clr:#ff0303;"><i></i></div>
                                <div class="circle circle2" id="mn" style="--clr:#000;"><i></i></div>
                                <div class="circle circle3" id="hr" style="--clr:#000;"><i></i></div>



                                <span style = "--i:1;"><b>1</b></span>
                                <span style = "--i:2;"><b>2</b></span>
                                <span style = "--i:3;"><b>3</b></span>
                                <span style = "--i:4;"><b>4</b></span>
                                <span style = "--i:5;"><b>5</b></span>
                                <span style = "--i:6;"><b>6</b></span>
                                <span style = "--i:7;"><b>7</b></span>
                                <span style = "--i:8;"><b>8</b></span>
                                <span style = "--i:9;"><b>9</b></span>
                                <span style = "--i:10;"><b>10</b></span>
                                <span style = "--i:11;"><b>11</b></span>
                                <span style = "--i:12;"><b>12</b></span>
                              
                              </div>
                        </div>
                        </div>
                        
                </div>

                <!-- Tasks -->
                <div class="w3-threequarter">
                    
                    <div class="w3-row w3-center">
                        <!-- Task tab 1 -->
                        <div class="w3-half w3-container" id="assignments">
                            <div class="assignmentHeader w3-dark-grey w3-padding"><h2>Opgaver</h2></div>
                          <div class="w3-row" id="assignmentCards">
                            
                          </div>
                        </div>

                        <!-- Task tab 3 -->
                        <div class="w3-half w3-container">
                          <div class="assignmentHeader w3-dark-grey w3-padding"><h2>FÃ¦rdige opgaver</h2></div>
                          <div class="w3-row" id="finishedAssignments">

                          </div>
                        </div>
                      </div>
                </div>
              </div>
        </div>
        
        <script src="inc/styling/js/index.js"></script>
    </body>
</html>