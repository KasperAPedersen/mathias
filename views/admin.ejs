<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Mathias | Admin</title>
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <script src="https://kit.fontawesome.com/d7cb81324e.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" type="text/css" href="inc/styling/css/admin.css" />
    </head>
    <body>
        <div id="swp">
            <% if (locals.messages != null) { %>
                <% let messages = Array(locals.messages); messages.forEach((m) => { %>
                    <div class="w3-panel w3-red" id="alert" style="display: none;"><p><%= m.info %></p></div>
            <% })} %>

            <!-- Nav -->
            <div class="w3-display-container w3-bar w3-dark-grey">
                <a href="/" class="w3-bar-item w3-button w3-mobile w3-blue w3-hover-blue" style="width:33%">Home <i class="fa-solid fa-home"></i></a>
                <a href="/logout" class="w3-bar-item w3-button w3-mobile w3-display-right w3-hover-blue" style="width:33%">Log out <i class="fa-solid fa-sign-out"></i></a>
            </div>

            <div class="w3-margin-top">
                <div class="w3-quarter">
                    <nav class="w3-bar-block">
                        <button class="w3-bar-item w3-button w3-dark-grey w3-hover-blue" onclick="changeTab(1);">All Users</button>
                        <button class="w3-bar-item w3-button w3-dark-grey w3-hover-blue" onclick="changeTab(2);">Add assignment</button>
                      </nav>
                </div>

                <div class="w3-threequarter w3-margin-left" id="displayTab">
                    <ul class="w3-ul w3-card-4" id="displayAllUsers">
                        <!-- users tab -->
                    </ul>

                    <ul class="w3-ul w3-card-4" id="addAssignment" style="display:none;">
                        <!-- Add assignments tab -->
                        <form action="/addAssignment" class="w3-container " method="POST" enctype="multipart/form-data">
                            <h2 class="w3-center">Add assignment</h2>
                            <div class="w3-row w3-section">
                                <div class="w3-col" style="width:50px;padding-top: px;"><i class="w3-xxlarge fa fa-user"></i></div>
                                  <div class="w3-rest">
                                      <input class="w3-input w3-border" name="title" type="area" placeholder="Title">
                                  </div>
                              </div>
                            
                            <div class="w3-row w3-section">
                                <div class="w3-col" style="width:50px;padding-top: 5px;"><i class="w3-xxlarge fa-regular fa-image"></i></div>
                                  <div class="w3-rest">
                                    <input class="w3-input w3-border" name="image" type="file">
                                  </div>
                            </div>

                            <div class="w3-row w3-section">
                              <div class="w3-col" style="width:50px;padding-top: 1px;"><i class="w3-xxlarge fa fa-user"></i></div>
                                <div class="w3-rest">
                                    <textarea class="w3-input w3-border" name="assignment" type="area" placeholder="Assigment..." style="height: 150px;"></textarea>
                                </div>
                            </div>
                            <button class="w3-button w3-block w3-section w3-blue w3-ripple w3-padding" type="submit">Add</button>
                        </form>
                    </ul>
                </div>
                
              </div>

        </div>
        
        <script src="inc/styling/js/admin.js"></script>
    </body>
</html>